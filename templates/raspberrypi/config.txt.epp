<% case $facts['profile']['platform'] { -%>
<% 'raspberrypi3': { -%>
dtoverlay=miniuart-bt
enable_uart=1
<% } -%>
<% 'raspberrypi4' : { -%>
dtoverlay=vc4-kms-v3d
dtparam=pwr_led_trigger=actpwr
enable_uart=1
uart_2ndstage=1
<% } -%>
<% 'raspberrypi5' : { -%>
dtoverlay=vc4-kms-v3d
dtparam=pwr_led_trigger=actpwr
dtparam=uart0_console
<% } -%>
<% } -%>
<% case $nest::bootloader { -%>
<% 'systemd': { -%>
kernel=u-boot.bin
<% } -%>
<% 'u-root': { -%>
auto_initramfs=1
<% } -%>
<% } -%>
